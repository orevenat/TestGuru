<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title><%= t('.title') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'admin/nav' %>
    <div class="container mt-3">
      <div class="row">
        <div class="col col-xs-3 col-xl-3">
          <%= render 'admin/left_nav' %>
        </div>
        <div class="col col-xs-9 col-xl-9">
          <%= render 'shared/flash' %>
          <%= yield %>
        </div>
      </div>
    </div>
    <%= render 'admin/footer' %>
  </body>
</html>
