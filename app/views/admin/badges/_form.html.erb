<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :badge_name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :picture %>
    <%= form.text_field :picture, id: :badge_picture, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :rule  %>
    <%= form.collection_select :rule_id, @rules, :id, :rule_type, { prompt: true }, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
