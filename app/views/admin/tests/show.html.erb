<h1><%= t('.header') %>: <%= @test.title %></h1>

<p><%= t('.level') %>: <%= @test.level %></p>
<p><%= t('.category') %>: <%= @test.category.title %></p>
<p><%= t('.author') %>: <%= @test.author.full_name %></p>
<p><%= t('.question_count') %>: <%= @test.questions.count %></p>
<%= link_to t('.new_question'), new_admin_test_question_path(@test.id) %>
<h2><%= t('.question_list') %></h2>
<table>
  <tr>
    <th><%= t('.question') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>
  <%= render @questions %>
</table>
<%= link_to t('.edit'), edit_admin_test_path(@test) %> |
<%= link_to t('.list'), admin_tests_path %>

