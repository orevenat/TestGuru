<h1 class="mb-4"><%= t('.header') %>: <%= @test.title %></h1>

<dl class="row">
  <dt class="col-sm-3"><%= t('.level') %>:</dt>
  <dd class="col-sm-9"><%= @test.level %></dd>
  <dt class="col-sm-3"><%= t('.category') %>:</dt>
  <dd class="col-sm-9"><%= @test.category.title %></dd>
  <dt class="col-sm-3"><%= t('.author') %>:</dt>
  <dd class="col-sm-9"><%= @test.author.full_name %></dd>
  <dt class="col-sm-3"><%= t('.question_count') %>:</dt>
  <dd class="col-sm-9"><%= @test.questions.count%></dd>
</dl>
<%= link_to t('.new_question'), new_admin_test_question_path(@test.id) %>
<h2 class="mt-3 mb-3"><%= t('.question_list') %></h2>
<table class="table">
  <tr>
    <th><%= t('.question') %></th>
    <th colspan="3"><%= t('.actions') %></th>
  </tr>
  <%= render @questions %>
</table>
<%= link_to t('.edit'), edit_admin_test_path(@test) %> |
<%= link_to t('.list'), admin_tests_path %>

