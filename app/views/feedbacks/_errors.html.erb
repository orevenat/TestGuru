<% if resource.present? && resource.errors.any? %>
  <%= content_tag :div, class: 'alert alert-danger resource-errors' do %>
    <h4 class="alert-heading">
      <%= t('.header', count: resource.errors.count) %>:
    </h4>
    <hr>
    <ul>
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>
